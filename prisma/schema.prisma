// -----------------------------
// Prisma Client Generator
// -----------------------------
generator client {
  provider = "prisma-client-js"
}

// -----------------------------
// Database Connection (PostgreSQL)
// -----------------------------
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// -----------------------------
// Пол (мъж / жена)
// -----------------------------
enum Gender {
  MALE
  FEMALE
}

// -----------------------------
// Крупиета
// -----------------------------
model Croupier {
  id           Int       @id @default(autoincrement())
  firstName    String
  middleName   String?
  lastName     String?
  nickname     String    @unique
  gender       Gender
  email        String    @unique
  startDate    DateTime
  promotions   Int       @default(0)
  passwordHash String
  games        Game[]    // свързани игри (many-to-many)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// -----------------------------
// Админи
// -----------------------------
model Admin {
  id           Int      @id @default(autoincrement())
  name         String
  passwordHash String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// -----------------------------
// Питбосове
// -----------------------------
model Pitboss {
  id           Int       @id @default(autoincrement())
  firstName    String
  middleName   String?
  lastName     String?
  nickname     String    @unique
  gender       Gender
  startDate    DateTime
  promotions   Int       @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// -----------------------------
// QA (Контрол на качеството)
// -----------------------------
model QA {
  id           Int       @id @default(autoincrement())
  firstName    String
  middleName   String?
  lastName     String?
  nickname     String    @unique
  gender       Gender
  startDate    DateTime
  promotions   Int       @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// -----------------------------
// Training (Обучители)
// -----------------------------
model Training {
  id           Int       @id @default(autoincrement())
  firstName    String
  middleName   String?
  lastName     String?
  nickname     String    @unique
  gender       Gender
  startDate    DateTime
  promotions   Int       @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// -----------------------------
// Игри (добавят се от админ менюто)
// -----------------------------
model Game {
  id        Int         @id @default(autoincrement())
  name      String
  croupiers Croupier[]  // many-to-many към Крупиета
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Settings {
  id         Int      @id @default(1)
  lastUpdate DateTime
}
