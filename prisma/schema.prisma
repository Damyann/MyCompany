generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Gender {
  MALE
  FEMALE
}

model Croupier {
  id           Int       @id @default(autoincrement())
  firstName    String
  middleName   String?
  lastName     String?
  nickname     String    @unique
  gender       Gender
  email        String    @unique
  startDate    DateTime
  promotions   Int       @default(0)
  passwordHash String
  games        Game[]
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
}

model Admin {
  id           Int       @id @default(autoincrement())
  name         String
  passwordHash String
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
}

model Pitboss {
  id           Int       @id @default(autoincrement())
  firstName    String
  middleName   String?
  lastName     String?
  nickname     String    @unique
  gender       Gender
  startDate    DateTime
  promotions   Int       @default(0)
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
}

model QA {
  id           Int       @id @default(autoincrement())
  firstName    String
  middleName   String?
  lastName     String?
  nickname     String    @unique
  gender       Gender
  startDate    DateTime
  promotions   Int       @default(0)
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
}

model Training {
  id           Int       @id @default(autoincrement())
  firstName    String
  middleName   String?
  lastName     String?
  nickname     String    @unique
  gender       Gender
  startDate    DateTime
  promotions   Int       @default(0)
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
}

model Game {
  id        Int         @id @default(autoincrement())
  name      String
  croupiers Croupier[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Settings {
  id         Int      @id @default(autoincrement())
  lastUpdate DateTime
}
